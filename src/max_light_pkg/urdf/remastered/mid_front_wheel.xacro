<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mid_front_wheel">

<xacro:include filename="$(find max_light_pkg)/urdf/cylinder_inertia.xacro"/>

<xacro:macro name="mid_front_wheel" params="left_right radius length position">

        
    <xacro:property name="mass" value="2" />

    <link name="mid_front_${left_right}_wheel">
        <!-- <visual>
            <geometry>
                <cylinder radius="${radius}" length="${length}" />
            </geometry>
        </visual> -->
        <collision>
            <geometry>
                <cylinder radius="${radius}" length="${length}" />
            </geometry>
        </collision>
        <xacro:cylinder_inertia mass="${mass}" radius="${radius}" length="${length}"/>
    </link>

    <joint name="mid_front_${left_right}_wheel_joint" type="continuous">
        <origin xyz="0.03085 ${position} -0.1459" rpy=" -1.57 0 0" />
        <parent link="base_link" />
        <child link="mid_front_${left_right}_wheel" />
        <axis  xyz="0 0 1" />
    </joint>

    <transmission name="trans_mid_front_${left_right}_wheel">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="mid_front_${left_right}_wheel_joint">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor_mid_front_${left_right}_wheel">
        <mechanicalReduction>100</mechanicalReduction>
        </actuator>
    </transmission>

    <gazebo reference="mid_front_${left_right}_wheel">
        <gravity>true</gravity>
        <mu1>1</mu1>
        <mu2>1</mu2>
        <kd>1</kd>
        <kp>10000000000.0</kp>
        <fdir1>0 0 1</fdir1>
        <selfCollide>false</selfCollide>
    </gazebo>

</xacro:macro>

</robot>
